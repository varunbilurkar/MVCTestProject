@{
    ViewBag.Title = "About";
}

@model Mvc.TestProject.Models.ContactAddressVM

<div class="row">
    <div class="col-md-8">

        @using (Html.BeginForm(new { role = "form" }))
        {
            <div class="form-group">
                <label for="ContactVM_FirstName">FirstName</label>
                @Html.TextBoxFor(m => m.ContactVM.FirstName, new { @class = "form-control", placeholder = "First Name" })
            </div>
            <div class="form-group">
                <label for="ContactVM_LastName">Last Name</label>
                @Html.TextBoxFor(m => m.ContactVM.LastName, new { @class = "form-control", placeholder = "Last Name" })
            </div>
  
            for (int i = 0; i < Model.Addresses.Count; i++)
            {
                 <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Address @i</h3>
                </div>
                     <div class="panel-body">
            <div class="form-group">

                @Html.TextBoxFor(m => m.Addresses[i].Line1, new { @class = "form-control", placeholder = "Line1" })
            </div>
        
 

            <div class="form-group">

                @Html.TextBoxFor(m => m.Addresses[i].City, new { @class = "form-control", placeholder = "City" })
            </div>
                         </div>
                     </div>
            }
 
            <input type="submit"  class="btn btn-lg btn-primary" value="Create Contact" />   
        }
    </div>
</div>
